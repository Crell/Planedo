{% extends 'base.html.twig' %}

{% block title %}Latest articles{% endblock %}

{% block body %}

    {% if entries|length > 0 %}
        {% for entry in entries  %}
            <article>
                {{ entry.summary| raw }}
            </article>
        {% endfor %}

        <div>
        {% if previous >= 0 %}
            <a href="{{ path('html_main', { offset: previous }) }}">Previous</a>
        {% endif %}

        {% if next < entries|length %}
            <a href="{{ path('html_main', { offset: next }) }}">Next</a>
        {% endif %}
        </div>

    {% else %}
        <div>No entries have been found</div>
    {% endif %}

{% endblock %}

{% extends 'layout.html.twig' %}

{% block title %}Latest articles{% endblock %}

{% block page_contents %}

    {% if entries|length > 0 %}
        {% for entry in entries  %}
            <article>
                <h2><a href="{{ entry.link }}">{{ entry.title }}</a></h2>
                {{ entry.description | raw }}
            </article>
        {% endfor %}

        <div>
        {% if previous >= 0 %}
            <a href="{{ path('html_main', { offset: previous }) }}" rel="prev">Previous</a>
        {% endif %}

        {% if next < entries|length %}
            <a href="{{ path('html_main', { offset: next }) }}" rel="next">Next</a>
        {% endif %}
        </div>

    {% else %}
        <div>No entries have been found</div>
    {% endif %}

{% endblock %}
